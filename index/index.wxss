.input-container {
  min-height: 100vh;
  background: lightgreen;
  position: relative;
}

.input-scroll-view {
  height: calc(100vh - 280rpx);
}
.scroll-content {
  min-height: calc(100vh - 280rpx);
  background: yellow;
  display: flex;
  flex-direction: column;
}
.scroll-content.moveToBottom {
  justify-content: flex-end;
}
.scroll-content.moveToTop {
  justify-content: flex-start;
}

.question-block {
  border: 1px solid orange;
  width: 50%;
  margin-bottom: 30rpx;
}
.answer-block {
  border: 1px solid green;
  text-align: right;
  margin-bottom: 30rpx;
}

.controls {
  position: absolute;
  bottom: 0;
  background: green;
  height: 100rpx;
  width: 100%;
}

.section {
  position: absolute;
  background: black;
  width: 100%;
  bottom: 0;
}
.first-input-view {
  border: 1px solid red;
  
}
.first-input-view input {
  margin-bottom: 200rpx;
}

.second-input-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.second-input-view input {

  margin-bottom: 100rpx;
}
.section input {
  background: lightsalmon;
  width: 100%;
  height: 80rpx;
}
